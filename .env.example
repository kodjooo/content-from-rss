# Идентификатор Google Sheets; взять в URL таблицы (docs.google.com/spreadsheets/d/<ID>)
SHEET_ID=
# Путь до JSON сервисного аккаунта Google (создать в Google Cloud, раздел IAM & Admin)
GOOGLE_SERVICE_ACCOUNT_JSON=secrets/google-service-account.json
# Название вкладки (worksheet) в таблице, куда писать данные
SHEET_WORKSHEET=Sheet1
# API-ключ Pexels (dashboard.pexels.com → Your API Key)
PEXELS_API_KEY=
# Пропустить ли поиск изображений в Pexels и сразу переходить к генерации (true/false)
SKIP_PEXELS_SEARCH=false
# API-ключ FreeImageHost (личный кабинет freeimage.host)
FREEIMAGEHOST_API_KEY=
# URL эндпоинта FreeImageHost; оставьте по умолчанию или используйте кастомный
FREEIMAGEHOST_API_ENDPOINT=https://freeimage.host/api/1/upload
# Таймаут запросов FreeImageHost в секундах
FREEIMAGEHOST_API_TIMEOUT=30
# Таймаут запросов к Pexels API в секундах
PEXELS_API_TIMEOUT=20
# OpenAI API key (platform.openai.com → API Keys)
OPENAI_API_KEY=
# Отдельный OpenAI API key для генерации изображений (если отличается)
OPENAI_IMAGE_API_KEY=
# Модели OpenAI по этапам:
#  - OPENAI_MODEL_RANK — оценивает релевантность новости (использует app/scoring.py)
#  - OPENAI_MODEL_POST — генерирует финальный пост (app/post_generator.py)
#  - OPENAI_IMAGE_MODEL — создает изображение, когда не найдено готовое (app/image_pipeline.py)
OPENAI_MODEL_RANK=gpt-4o-mini
OPENAI_MODEL_POST=gpt-4o-mini
OPENAI_IMAGE_MODEL=gpt-image-1
# Качество изображений (gpt-image-1: low/medium/high/auto, dall-e-3: standard/hd)
IMAGE_QUALITY=medium
# Размер изображений (gpt-image-1: 1024x1024/1024x1536/1536x1024/auto, dall-e-3: 1024x1024)
IMAGE_SIZE=1536x1024
# Модель генерации изображений
IMAGE_MODEL=gpt-image-1
# Таймзона планировщика
SCHEDULER_TIMEZONE=Europe/Moscow
# Разовый прогон пайплайна при старте контейнера (true/false)
RUN_PIPELINE_ON_START=true
# Перечень RSS-источников (можно расширять)
RSS_SOURCES=https://techcrunch.com/category/artificial-intelligence/feed/,https://www.theverge.com/artificial-intelligence/rss/index.xml,https://www.technologyreview.com/feed/,https://venturebeat.com/category/ai/feed/,https://openai.com/blog/rss/,https://ai.googleblog.com/feeds/posts/default,https://www.anthropic.com/news/rss
# Ключевые слова для фильтрации новостей
KEYWORDS=AI,Artificial Intelligence,Automation,Neural,ChatGPT,LLM,Anthropic,OpenAI
# Порог схожести заголовков (0-1)
SIMILARITY_THRESHOLD=0.85
# Максимальное число новостей за цикл
PIPELINE_MAX_ITEMS=25
# Каталог для кэша и временных файлов
CACHE_DIR=.cache
# Уровень логирования
LOG_LEVEL=INFO
